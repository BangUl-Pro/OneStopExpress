<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main_container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pannel"/>


        <TextView
            android:id="@+id/activity_main_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/activity_main_price"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:visibility="invisible"
            android:text="옵션 별도"/>

        <TextView
            android:id="@+id/activity_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="34sp"
            android:textColor="#1c335d"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="0원"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/btn_sub"
            android:text="이사평수"/>


        <Spinner
            android:id="@+id/activity_main_room_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/btn_sub"
            android:text="가족 수"/>


        <EditText
            android:id="@+id/activity_main_person_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="1"/>


    </LinearLayout>

    <com.ironfactory.first_express.controllers.views.ProductGridView
        android:id="@+id/activity_main_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:text="옵션"/>


        <ToggleButton
            android:id="@+id/activity_main_radder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="사다리차/운반"
            android:textOff="사다리차/운반"/>


        <ToggleButton
            android:id="@+id/activity_main_air_conditional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="에어컨"
            android:textOff="에어컨"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/activity_main_system_hanger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="시스템헹거"
            android:textOff="시스템헹거"/>


        <ToggleButton
            android:id="@+id/activity_main_closet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="붙박이장"
            android:textOff="붙박이장"/>


        <ToggleButton
            android:id="@+id/activity_main_bed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="흙/돌침대"
            android:textOff="흙/돌침대"/>


        <ToggleButton
            android:id="@+id/activity_main_busy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="손없는날/기타"
            android:textOff="손없는날/기타"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_main_far"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_margin="3dp"
            android:text="거리"/>

        <Button
            android:id="@+id/activity_main_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:background="@color/black"/>

        <Button
            android:id="@+id/activity_main_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:background="#e1a59d"
            android:text="C"/>

        <Button
            android:id="@+id/activity_main_equal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:background="#edb562"
            android:text="="/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn=""
            android:textOff=""/>

        <ToggleButton
            android:id="@+id/activity_main_save_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="보관이사"
            android:textOff="보관이사"/>


        <ToggleButton
            android:id="@+id/activity_main_office"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="사무실이사"
            android:textOff="사무실이사"/>


        <Button
            android:id="@+id/activity_main_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#e1a59d"
            android:text="상세견적 받아보기"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>
